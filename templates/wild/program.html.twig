{% extends 'base.html.twig' %}
{% block title %}Saisons de serie{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
        </div>
    </div>
    {% for season in seasons %}
        <div class="media">
            <div class="media-body">
                <h1 class="mt-0">Saison : {{ season.number }}</h1>
                <h2><a href="/wild/episode/{{ season.id }}">{{ season.description }}</a></h2>
                <p></p>
            </div>
        </div>
    {% endfor %}
{% endblock %}
