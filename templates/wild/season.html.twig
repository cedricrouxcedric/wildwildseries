{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="text-black-50 font-weight-bold mt-3">Tout les episodes de {{ program.title }}<br>Saison {{ season.number }}</h1>
            <p>
                <a href="{{ path('category_index') }}" class="btn btn-primary my-2">Toutes les categories</a>
                <a href="{{ path('wild_index') }}"class="btn btn-success my-2">Toutes les séries</a>
                <a href="{{ path('wild_show_actors') }}" class="btn btn-secondary my-2">Tout les acteurs</a>
            </p>
        </div>
    </section>
    <div class="media container mt-5">
        <img class="align-self-start mr-3 w-25 rounded" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="ml-3">
            <h1 class="mt-0">{{ program.title }}</h1>
            <h2>{{ season.description }}</h2>
            {% for episode in episodes %}
                <div>
                    <a class="text-white" href="{{ path('wild_show_episode', {'slug': episode.slug}) }}">{{ episode.slug }}</a>
                </div>
            {% endfor %}
            <div class="mt-3">
                <a class="text-white" href="{{ path('wild_show', {'slug': program.slug}) }}">Revenir a la serie</a>
                <a class="text-white" href="{{ path('wild_index') }}">Retour à l'accueil</a>
            </div>
        </div>
    </div>
{% endblock %}
