{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="container-fluid pad-top">
        <h1>{{ program.title }}</h1>

        <table class="table text-white">
            <tbody>

                <img src="{{ program.poster }}">

            <tr>
                <th>Title</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ program.summary }}</td>
            </tr>
            </tbody>
        </table>
        <strong>Acteur :</strong>
        <ul>
            {% for actor in program.actors %}
                <li><a href="{{ path('wild_show_actor', {'name': actor.name}) }}">{{ actor.name }}</a></li>
            {% else %}
                <li>Aucun acteur pour cette s√©rie</li>
            {% endfor %}
        </ul>
        <div class="d-flex justify-content-between">
            <div><a href="{{ path('program_index') }}"><i class="text-light fas fa-arrow-left"></i></a></div>
            <div><a href="{{ path('program_edit', {'slug': program.slug}) }}"><i class="m-1 text-warning far fa-edit"></i></a></div>
            <div>{{ include('program/_delete_form.html.twig') }}</div>
        </div>
    </div>
{% endblock %}
